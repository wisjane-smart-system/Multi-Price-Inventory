extends layout

block content
    form(action='auth', method='POST').form-signin
      img.mb-4(src='https://simpleicons.org/icons/gitter.svg', alt='', width='72', height='72')
      h1.h3.mb-3.font-weight-normal Please sign in
      label.sr-only(for='inputUsername') Email address
      input#inputEmail.form-control(type='text', name='username', placeholder='Username', autofocus='')
      br
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', name='password', placeholder='Password')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in